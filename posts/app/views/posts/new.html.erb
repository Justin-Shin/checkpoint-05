<h1>Write a new article</h1>
<%= form_for @post do |f| %>
<br>
<%= f.label "Title" %>
<br>
<%= f.text_field :title %>
<br>
<br>
<%= f.label "Author" %>
<br>
<%= f.text_field :author %>
<br>
<br>
<%= f.label "Article" %>
<br>
<%= f.text_area :body, size: "100x20" %>
<br>

<%= f.submit "Post!" %>
<% end %>
<br>
<%= link_to "Cancel", posts_path %>
