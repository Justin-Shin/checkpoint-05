<h2>Edit <%= @post.title %></h2>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label :author %>
  <br>
  <%= f.text_field :author %>
  <br>
  <br>
  <%= f.label :body %>
  <br>
  <%= f.text_area :body, size: "100x20" %>
  <br>
  <br>
  <%= f.submit "Submit Edits" %>
<% end %>
<br>
<%= link_to "Cancel", posts_path %>
<br>
<br>
<br>

<%= form_for @post, method: :delete do |f| %>
  <% f.submit "Delete", class: "delete" %>
<% end %>
